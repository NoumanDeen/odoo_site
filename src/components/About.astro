---
export interface Props {
  lang: 'ar' | 'en';
}

const { lang } = Astro.props;

const content = {
  ar: {
    title: 'عن ToDoOps',
    subtitle: 'من المستخدمين الى المنفذين المعتمدين',
    description: 'بدات رحلتنا كمستخدمين حقيقيين لنظام اودو ERP في اعمالنا الخاصة. واجهنا التحديات، وتعلمنا الحلول، وطورنا الخبرة. الان، كشريك اودو المعتمد في المملكة العربية السعودية، نشارك هذه الخبرة معكم.',
    values: {
      title: 'قيمنا الاساسية',
      items: [
        {
          title: 'الخبرة الحقيقية',
          description: 'فريقنا استخدم اودو ERP قبل تنفيذه للاخرين'
        },
        {
          title: 'الحلول المخصصة',
          description: 'نفهم ان كل عمل له احتياجات فريدة'
        },
        {
          title: 'الدعم المستمر',
          description: 'شراكة طويلة المدى وليس مجرد تنفيذ'
        }
      ]
    },
    learnMore: 'تعرف على المزيد عنا',
    aboutUsLink: '/about-us'
  },
  en: {
    title: 'About ToDoOps',
    subtitle: 'From Users to Certified Implementers',
    description: 'Our journey began as real users of Odoo ERP in our own businesses. We faced the challenges, learned the solutions, and developed the expertise. Now, as a certified Odoo partner in Saudi Arabia, we share this experience with you.',
    values: {
      title: 'Our Core Values',
      items: [
        {
          title: 'Real Experience',
          description: 'Our team used Odoo ERP before implementing it for others'
        },
        {
          title: 'Custom Solutions',
          description: 'We understand every business has unique needs'
        },
        {
          title: 'Ongoing Support',
          description: 'Long-term partnership, not just implementation'
        }
      ]
    },
    learnMore: 'Learn more about us',
    aboutUsLink: '/en/about-us'
  }
};

const t = content[lang];
---

<section id="about" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl lg:text-5xl font-bold text-dark-900 mb-4">
        {t.title}
      </h2>
      <p class="text-xl text-odoo-purple font-medium mb-6">
        {t.subtitle}
      </p>
      <p class="text-lg text-dark-600 max-w-4xl mx-auto leading-relaxed">
        {t.description}
      </p>
      <div class="mt-6">
        <a href={t.aboutUsLink} class="inline-flex items-center text-odoo-purple hover:text-purple-800 font-medium transition-colors duration-200">
          {t.learnMore}
          <svg class={`w-4 h-4 ml-2 rtl:ml-0 rtl:mr-2 ${lang === 'ar' ? 'rotate-180' : ''}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>

    <!-- Values -->
    <div>
      <h3 class="text-3xl font-bold text-dark-900 text-center mb-12">
        {t.values.title}
      </h3>
      <div class="grid md:grid-cols-3 gap-8">
        {t.values.items.map((value, index) => (
          <div class="text-center p-8 bg-gradient-to-br from-gray-50 to-odoo-accent/10 rounded-xl hover:shadow-lg transition-all duration-200">
            <div class={`w-16 h-16 mx-auto mb-6 rounded-xl flex items-center justify-center ${
              index === 0 ? 'bg-odoo-accent/20' : 
              index === 1 ? 'bg-green-100' : 'bg-blue-100'
            }`}>
              <svg class={`w-8 h-8 ${
                index === 0 ? 'text-odoo-purple' :
                index === 1 ? 'text-green-600' : 'text-blue-600'
              }`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                {index === 0 && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                )}
                {index === 1 && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                )}
                {index === 2 && (
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
                )}
              </svg>
            </div>
            <h4 class="text-xl font-bold text-dark-900 mb-4">
              {value.title}
            </h4>
            <p class="text-dark-600 leading-relaxed">
              {value.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>