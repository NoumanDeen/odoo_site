---
import ToDoOpsLogo from './ToDoOpsLogo.astro';

export interface Props {
  lang: 'ar' | 'en';
}

const { lang } = Astro.props;

const content = {
  ar: {
    title: 'خدمات تنفيذ انظمة ERP المتخصصة في المملكة العربية السعودية',
    subtitle: 'خدمات ERP مخصصة لنمو اعمالك',
    description: 'ما بنيناه لانفسنا... نقدمه الان بثقة. فريقنا من المستخدمين الحقيقيين لاودو ERP قبل ان نصبح شركاء معتمدين للتنفيذ.',
    features: [
      'تنفيذ وتخصيص اودو ERP الكامل',
      'تدريب واعداد الفرق',
      'دعم تقني مستمر',
      'تكامل الانظمة والـ APIs'
    ],
    cta: 'احجز استشارة مجانية',
    secondary: 'تعرف على خدماتنا'
  },
  en: {
    title: 'Professional ERP Implementation Services in Saudi Arabia',
    subtitle: 'Custom ERP Services for Your Business Growth',
    description: 'What we built for ourselves... we now offer with confidence. Our team were real users of Odoo ERP before becoming certified implementers.',
    features: [
      'Full Odoo ERP implementation and customization',
      'Training and onboarding',
      'Ongoing technical support',
      'API/system integrations'
    ],
    cta: 'Book Free Consultation',
    secondary: 'Explore Our Services'
  }
};

const t = content[lang];
---

<section class="relative bg-gradient-to-br from-gray-50 via-white to-odoo-accent/10 py-20 lg:py-32">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Content -->
      <div class="space-y-8">
        <div class="space-y-6">
          <h1 class="text-4xl lg:text-5xl xl:text-6xl font-bold text-dark-900 leading-tight">
            {t.title}
          </h1>
          <p class="text-xl lg:text-2xl text-odoo-purple font-medium">
            {t.subtitle}
          </p>
          <p class="text-lg text-dark-600 leading-relaxed">
            {t.description}
          </p>
        </div>

        <!-- Features List -->
        <div class="space-y-4">
          {t.features.map((feature) => (
            <div class="flex items-center space-x-3 rtl:space-x-reverse">
              <div class="w-6 h-6 bg-odoo-accent/20 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-4 h-4 text-odoo-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <span class="text-dark-700 font-medium">{feature}</span>
            </div>
          ))}
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          <a href={lang === 'ar' ? '/contact' : '/en/contact'} class="bg-odoo-purple text-white px-8 py-4 rounded-lg font-semibold hover:bg-purple-800 transition-all duration-200 shadow-lg hover:shadow-xl text-center">
            {t.cta}
          </a>
          <a href={lang === 'ar' ? '/services' : '/en/services'} class="border-2 border-odoo-purple text-odoo-purple px-8 py-4 rounded-lg font-semibold hover:bg-odoo-accent/10 transition-all duration-200 text-center">
            {t.secondary}
          </a>
        </div>
      </div>

      <!-- Visual -->
      <div class="relative">
        <div class="relative z-10 bg-white rounded-2xl shadow-2xl p-8 transform rotate-3 hover:rotate-0 transition-transform duration-300">
          <div class="space-y-6">
            <div class="flex items-center space-x-3 rtl:space-x-reverse">
              <ToDoOpsLogo size={48} variant="default" />
              <div>
                <h3 class="font-bold text-dark-900 flex items-center">
                  <span class="text-odoo-purple" dir="ltr">ToDoOps</span>
                  <span class="text-dark-700 ml-1" dir="ltr">ERP</span>
                </h3>
                <p class="text-dark-600 text-sm">Complete Business Solution</p>
              </div>
            </div>
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-gray-50 p-4 rounded-lg">
                <div class="w-8 h-8 bg-green-100 rounded-lg mb-2"></div>
                <p class="text-sm font-medium text-dark-700">CRM</p>
              </div>
              <div class="bg-gray-50 p-4 rounded-lg">
                <div class="w-8 h-8 bg-blue-100 rounded-lg mb-2"></div>
                <p class="text-sm font-medium text-dark-700">Accounting</p>
              </div>
              <div class="bg-gray-50 p-4 rounded-lg">
                <div class="w-8 h-8 bg-purple-100 rounded-lg mb-2"></div>
                <p class="text-sm font-medium text-dark-700">Inventory</p>
              </div>
              <div class="bg-gray-50 p-4 rounded-lg">
                <div class="w-8 h-8 bg-orange-100 rounded-lg mb-2"></div>
                <p class="text-sm font-medium text-dark-700">Sales</p>
              </div>
            </div>
          </div>
        </div>
        <div class="absolute -top-4 -right-4 w-32 h-32 bg-odoo-accent/20 rounded-full opacity-60"></div>
        <div class="absolute -bottom-6 -left-6 w-24 h-24 bg-odoo-accent/30 rounded-full opacity-40"></div>
      </div>
    </div>
  </div>
</section>