---
import { industries } from '../data/industries';

export interface Props {
  lang: 'ar' | 'en';
}

const { lang } = Astro.props;

const content = {
  ar: {
    title: 'تواصل معنا',
    subtitle: 'ابدا رحلتك مع اودو اليوم',
    description: 'احجز استشارة مجانية مع خبرائنا لمناقشة احتياجات عملك وكيف يمكن لاودو ان يساعدك على النمو.',
    form: {
      name: 'الاسم الكامل',
      email: 'البريد الالكتروني',
      company: 'اسم الشركة',
      phone: 'رقم الهاتف',
      industry: 'نوع الصناعة',
      employees: 'كم عدد الموظفين المتوقع استخدامهم لنظام اودو (المستخدمين)؟ (يرجى تقديم العدد التقريبي)',
      message: 'رسالتك',
      submit: 'ارسال الطلب'
    },
    contact: {
      title: 'معلومات التواصل',
      phone: '+966 54 067 6575',
      email: 'contact@todoops.com',
      whatsapp: 'تحدث معنا على واتساب',
      location: 'المنطقة الشرقية، الرياض، جدة، ومناطق اخرى في المملكة العربية السعودية'
    }
  },
  en: {
    title: 'Contact Us',
    subtitle: 'Start Your Odoo Journey Today',
    description: 'Book a free consultation with our experts to discuss your business needs and how Odoo can help you grow.',
    form: {
      name: 'Full Name',
      email: 'Email Address',
      company: 'Company Name',
      phone: 'Phone Number',
      industry: 'Industry Type',
      employees: 'How many employees are expected to use the Odoo system (the users)? (Please provide the closest estimated number)',
      message: 'Your Message',
      submit: 'Send Request'
    },
    contact: {
      title: 'Contact Information',
      phone: '+966 54 067 6575',
      email: 'contact@todoops.com',
      whatsapp: 'Chat with us on WhatsApp',
      location: 'Eastern Province, Riyadh, Jeddah, and other regions across Saudi Arabia'
    }
  }
};

const t = content[lang];
---

<section id="contact" class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl lg:text-5xl font-bold text-dark-900 mb-4">
        {t.title}
      </h2>
      <p class="text-xl text-odoo-purple font-medium mb-4">
        {t.subtitle}
      </p>
      <p class="text-lg text-dark-600 max-w-3xl mx-auto">
        {t.description}
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div class="bg-white rounded-xl p-8 shadow-lg">
        <form class="space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-dark-700 mb-2">
                {t.form.name}
              </label>
              <input type="text" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-odoo-purple focus:border-odoo-purple transition-colors duration-200">
            </div>
            <div>
              <label class="block text-sm font-medium text-dark-700 mb-2">
                {t.form.email}
              </label>
              <input type="email" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-odoo-purple focus:border-odoo-purple transition-colors duration-200">
            </div>
          </div>
          
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <label class="block text-sm font-medium text-dark-700 mb-2">
                {t.form.company}
              </label>
              <input type="text" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-odoo-purple focus:border-odoo-purple transition-colors duration-200">
            </div>
            <div>
              <label class="block text-sm font-medium text-dark-700 mb-2">
                {t.form.phone}
              </label>
              <input type="tel" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-odoo-purple focus:border-odoo-purple transition-colors duration-200">
            </div>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-dark-700 mb-2">
              {t.form.industry}
            </label>
            <select required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-odoo-purple focus:border-odoo-purple transition-colors duration-200">
              <option value="">{lang === 'ar' ? 'اختر نوع الصناعة' : 'Select Industry Type'}</option>
              {industries.map(industry => (
                <option value={industry.slug}>
                  {lang === 'ar' ? industry.ar.name : industry.en.name}
                </option>
              ))}
              <option value="other">{lang === 'ar' ? 'اخرى' : 'Other'}</option>
            </select>
          </div>
          
          <div>
            <label class="block text-sm font-medium text-dark-700 mb-2">
              {t.form.employees}
            </label>
            <input type="number" min="1" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-odoo-purple focus:border-odoo-purple transition-colors duration-200">
          </div>
          
          <div>
            <label class="block text-sm font-medium text-dark-700 mb-2">
              {t.form.message}
            </label>
            <textarea rows="5" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-odoo-purple focus:border-odoo-purple transition-colors duration-200 resize-none"></textarea>
          </div>
          
          <button type="submit" class="w-full bg-odoo-purple text-white py-4 rounded-lg font-semibold hover:bg-purple-800 transition-colors duration-200 shadow-lg hover:shadow-xl">
            {t.form.submit}
          </button>
        </form>
      </div>

      <!-- Contact Information -->
      <div class="space-y-8">
        <div class="bg-white rounded-xl p-8 shadow-lg">
          <h3 class="text-2xl font-bold text-dark-900 mb-6">
            {t.contact.title}
          </h3>
          
          <div class="space-y-6">
            <!-- Phone -->
            <div class="flex items-center space-x-4 rtl:space-x-reverse">
              <div class="w-12 h-12 bg-odoo-accent/20 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-odoo-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <p class="font-medium text-dark-900">
                  <a href="tel:+966540676575" class="hover:text-odoo-purple transition-colors duration-200">
                    {lang === 'ar' 
                      ? <span dir="ltr">+966 54 067 6575</span>
                      : '+966 54 067 6575'
                    }
                  </a>
                </p>
                <p class="text-dark-600 text-sm">{lang === 'ar' ? 'اتصل بنا' : 'Call us'}</p>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-center space-x-4 rtl:space-x-reverse">
              <div class="w-12 h-12 bg-odoo-accent/20 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-odoo-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <p class="font-medium text-dark-900">
                  <a href={`mailto:${t.contact.email}`} class="hover:text-odoo-purple transition-colors duration-200">
                    {t.contact.email}
                  </a>
                </p>
                <p class="text-dark-600 text-sm">{lang === 'ar' ? 'راسلنا' : 'Email us'}</p>
              </div>
            </div>

            <!-- Location -->
            <div class="flex items-center space-x-4 rtl:space-x-reverse">
              <div class="w-12 h-12 bg-odoo-accent/20 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-odoo-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <p class="font-medium text-dark-900">{t.contact.location}</p>
                <p class="text-dark-600 text-sm">{lang === 'ar' ? 'موقعنا' : 'Our location'}</p>
              </div>
            </div>
          </div>
        </div>

        <!-- WhatsApp CTA -->
        <div class="bg-gradient-to-r from-green-500 to-green-600 rounded-xl p-8 text-white">
          <div class="flex items-center space-x-4 rtl:space-x-reverse mb-4">
            <div class="w-12 h-12 bg-white bg-opacity-20 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.109"></path>
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold">{t.contact.whatsapp}</h3>
              <p class="text-green-100">{lang === 'ar' ? 'استشارة فورية ومجانية' : 'Instant free consultation'}</p>
            </div>
          </div>
          <a href="https://wa.me/966540676575" target="_blank" class="inline-flex items-center bg-white text-green-600 px-6 py-3 rounded-lg font-semibold hover:bg-green-50 transition-colors duration-200 shadow-lg">
            {lang === 'ar' ? 'تحدث معنا الان' : 'Chat Now'}
            <svg class={`w-5 h-5 ml-2 rtl:ml-0 rtl:mr-2 ${lang === 'ar' ? 'rotate-180' : ''}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>