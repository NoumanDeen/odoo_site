---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';

const services = [
  {
    title: 'Full Odoo ERP Implementation',
    slug: 'odoo-implementation',
    description: 'Complete and customized Odoo ERP implementation tailored to your unique business needs with seamless migration from legacy systems.',
    icon: 'implementation',
    features: ['Needs Analysis', 'Customization & Development', 'Data Migration', 'Training & Support']
  },
  {
    title: 'Business Analysis & Requirements Gathering',
    slug: 'business-analysis',
    description: 'Comprehensive study of your current business processes and precise requirements identification to ensure successful Odoo ERP implementation.',
    icon: 'analysis',
    features: ['Process Analysis', 'Requirements Definition', 'Strategy Development', 'Implementation Planning']
  },
  {
    title: 'Odoo Implementation & Module Configuration',
    slug: 'module-configuration',
    description: 'Configuration and setup of various Odoo modules to align with your business processes and maximize system benefits.',
    icon: 'modules',
    features: ['Module Configuration', 'Workflow Setup', 'Interface Customization', 'Function Testing']
  },
  {
    title: 'Customization & Development',
    slug: 'customization-development',
    description: 'Custom development and Odoo modifications to match your specific needs and unique business processes.',
    icon: 'development',
    features: ['Custom Development', 'Report Creation', 'API Integration', 'Module Development']
  },
  {
    title: 'Data Migration',
    slug: 'data-migration',
    description: 'Safe and accurate migration of all your data from legacy systems to Odoo with guaranteed data integrity and accuracy.',
    icon: 'migration',
    features: ['Data Analysis', 'Data Cleaning', 'Secure Migration', 'Verification & Testing']
  },
  {
    title: 'Hosting & Infrastructure',
    slug: 'hosting-infrastructure',
    description: 'Reliable and secure hosting solutions for your Odoo system with guaranteed high performance and advanced protection.',
    icon: 'hosting',
    features: ['Cloud Hosting', 'Backup Solutions', 'Advanced Security', 'Performance Monitoring']
  },
  {
    title: 'Training & Documentation',
    slug: 'training-documentation',
    description: 'Comprehensive training programs for your team with detailed documentation to ensure maximum utilization of your Odoo system.',
    icon: 'training',
    features: ['End-User Training', 'Admin Training', 'Custom Guides', 'Advanced Workshops']
  },
  {
    title: 'Support & Maintenance',
    slug: 'support-maintenance',
    description: 'Ongoing technical support and regular maintenance to ensure your Odoo system operates at peak efficiency and resolve issues quickly.',
    icon: 'support',
    features: ['24/7 Support', 'Regular Maintenance', 'System Updates', 'Quick Issue Resolution']
  },
  {
    title: 'Consultancy & Optimization',
    slug: 'consultancy-optimization',
    description: 'Specialized consulting to optimize your Odoo system performance and develop processes to achieve the best results.',
    icon: 'consulting',
    features: ['Performance Analysis', 'Process Optimization', 'Strategic Consulting', 'Continuous Development']
  },
  {
    title: 'Website & eCommerce Development',
    slug: 'website-ecommerce',
    description: 'Development of integrated websites and e-commerce stores with Odoo to provide an exceptional customer experience.',
    icon: 'ecommerce',
    features: ['Website Development', 'E-commerce Stores', 'Odoo Integration', 'Conversion Optimization']
  }
];

const getIcon = (iconType: string) => {
  const icons = {
    implementation: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>',
    analysis: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>',
    modules: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>',
    development: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>',
    migration: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>',
    hosting: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>',
    training: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>',
    support: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>',
    consulting: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>',
    ecommerce: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l-1 7a2 2 0 01-2 2H8a2 2 0 01-2-2L5 9z"></path>'
  };
  return icons[iconType] || icons.implementation;
};

// Generate JSON-LD structured data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Odoo ERP services in Saudi Arabia",
  "description": "Professional Odoo ERP implementation services in Saudi Arabia from certified Odoo partner",
  "provider": {
    "@type": "Organization",
    "name": "ToDoOps",
    "url": "https://your-domain.com",
    "address": {
      "@type": "PostalAddress",
      "addressCountry": "SA",
      "addressRegion": "Riyadh"
    }
  },
  "areaServed": {
    "@type": "Country",
    "name": "Saudi Arabia"
  },
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Odoo ERP Services",
    "itemListElement": services.map((service, index) => ({
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service",
        "name": service.title,
        "description": service.description
      }
    }))
  }
};
---

<Layout 
  title="Odoo ERP Services in Saudi Arabia - ToDoOps | Certified Odoo Partner"
  lang="en" 
  description="Professional Odoo ERP implementation services in Saudi Arabia. Implementation, customization, training, and comprehensive support from certified Odoo partner."
>
  <Fragment slot="head">
    <!-- SEO Meta Tags -->
    <meta name="keywords" content="Odoo ERP services in Saudi Arabia, certified Odoo partner, Odoo implementation, Odoo customization, Odoo support, Odoo training" />
    <meta property="og:title" content="Odoo ERP Services in Saudi Arabia - ToDoOps" />
    <meta property="og:description" content="Professional Odoo ERP implementation services in Saudi Arabia from certified Odoo partner" />
    <meta property="og:type" content="website" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href="https://your-domain.com/en/services" />
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  </Fragment>

  <Header lang="en" />
  
  <main class="py-20 bg-white min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb -->
      <nav class="mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-sm text-dark-600">
          <li>
            <a href="/en" class="hover:text-odoo-purple transition-colors duration-200">Home</a>
          </li>
          <li>
            <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </li>
          <li class="text-dark-900 font-medium">Services</li>
        </ol>
      </nav>

      <!-- Header Section -->
      <div class="text-center mb-16">
        <h1 class="text-4xl lg:text-5xl font-bold text-dark-900 mb-6">
          Odoo ERP Services in Saudi Arabia
        </h1>
        <p class="text-xl text-odoo-purple font-medium mb-6">
          Professional Odoo ERP Solutions from Certified Partner
        </p>
        <p class="text-lg text-dark-600 max-w-4xl mx-auto leading-relaxed">
          We are a certified Odoo partner in Saudi Arabia, providing comprehensive Odoo ERP implementation services for businesses of all sizes. 
          Our team of certified experts ensures successful and customized implementation tailored to your unique business needs.
        </p>
      </div>

      <!-- Why Choose Certified Partner Section -->
      <div class="bg-gradient-to-br from-gray-50 to-odoo-accent/10 rounded-2xl p-8 mb-16">
        <h2 class="text-3xl font-bold text-dark-900 text-center mb-8">
          Why Choose a Certified Odoo Partner?
        </h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-odoo-accent/20 rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-odoo-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-dark-900 mb-3">Certified Expertise</h3>
            <p class="text-dark-600">Team of Odoo-certified experts with years of experience in successful implementations</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-green-100 rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-dark-900 mb-3">Fast Implementation</h3>
            <p class="text-dark-600">Proven methodology ensuring fast and efficient implementation with minimal downtime</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-blue-100 rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-dark-900 mb-3">Ongoing Support</h3>
            <p class="text-dark-600">Continuous technical support and regular maintenance to ensure optimal system performance</p>
          </div>
        </div>
      </div>

      <!-- Services Grid -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold text-dark-900 text-center mb-12">
          Our Specialized Services
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {services.map((service, index) => (
            <div class="bg-white rounded-xl p-6 shadow-lg hover:shadow-2xl transition-all duration-300 border border-gray-100 group">
              <div class={`w-16 h-16 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-200 ${
                index % 4 === 0 ? 'bg-odoo-accent/20' :
                index % 4 === 1 ? 'bg-green-100' :
                index % 4 === 2 ? 'bg-blue-100' : 'bg-orange-100'
              }`}>
                <svg class={`w-8 h-8 ${
                  index % 4 === 0 ? 'text-odoo-purple' :
                  index % 4 === 1 ? 'text-green-600' :
                  index % 4 === 2 ? 'text-blue-600' : 'text-orange-600'
                }`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <Fragment set:html={getIcon(service.icon)} />
                </svg>
              </div>
              
              <h3 class="text-xl font-bold text-dark-900 mb-4">
                <a href={`/en/services/${service.slug}`} class="hover:text-odoo-purple transition-colors duration-200">
                  {service.title}
                </a>
              </h3>
              
              <p class="text-dark-600 mb-6 leading-relaxed">
                {service.description}
              </p>
              
              <ul class="space-y-2 mb-6">
                {service.features.map((feature) => (
                  <li class="flex items-center space-x-2">
                    <div class="w-4 h-4 bg-odoo-accent/20 rounded-full flex items-center justify-center flex-shrink-0">
                      <svg class="w-2 h-2 text-odoo-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"></path>
                      </svg>
                    </div>
                    <span class="text-dark-700 text-sm font-medium">{feature}</span>
                  </li>
                ))}
              </ul>

              <a 
                href={`/en/services/${service.slug}`}
                class="inline-flex items-center text-odoo-purple hover:text-purple-800 font-medium transition-colors duration-200"
              >
                Learn More
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </div>
          ))}
        </div>
      </div>

      <!-- CTA Section -->
      <div class="bg-gradient-to-r from-odoo-purple to-purple-800 rounded-2xl p-8 text-white text-center">
        <h2 class="text-3xl font-bold mb-4">
          Ready to Transform Your Business with Odoo ERP?
        </h2>
        <p class="text-xl mb-6 text-purple-100">
          Get a free consultation from our certified experts and discover how Odoo can improve your business operations
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a 
            href="/en/contact"
            class="inline-flex items-center bg-white text-odoo-purple px-8 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-all duration-200 shadow-lg"
          >
            Book Free Consultation
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
            </svg>
          </a>
          <a 
            href="/en/faq"
            class="inline-flex items-center border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-odoo-purple transition-all duration-200"
          >
            FAQ
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </main>

  <Footer lang="en" />
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>