---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Odoo Customization & Development in Saudi Arabia",
  "description": "Custom development services and Odoo modifications to match your specific needs and unique business processes",
  "provider": {
    "@type": "Organization",
    "name": "ToDoOps",
    "url": "https://your-domain.com"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Saudi Arabia"
  }
};
---

<Layout 
  title="Odoo Customization & Development - ToDoOps | Custom Odoo ERP Solutions in Saudi Arabia"
  lang="en" 
  description="Custom development services and Odoo modifications to match your specific needs. Custom development, report creation, API integration, and module development."
>
  <Fragment slot="head">
    <meta name="keywords" content="Odoo customization, Odoo development, custom solutions, ERP development, Odoo Saudi Arabia, module development" />
    <meta property="og:title" content="Odoo Customization & Development - ToDoOps" />
    <meta property="og:description" content="Custom development services and Odoo modifications to match your specific needs and unique business processes" />
    <link rel="canonical" href="https://your-domain.com/en/services/customization-development" />
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  </Fragment>

  <Header lang="en" />
  
  <main class="py-20 bg-white min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <h1 class="text-4xl lg:text-5xl font-bold text-dark-900 mb-6">
          Odoo Customization & Development
        </h1>
        <p class="text-xl text-odoo-purple font-medium mb-6">
          Custom solutions tailored to your unique business needs
        </p>
        <p class="text-lg text-dark-600 max-w-4xl mx-auto leading-relaxed">
          We provide custom development services and Odoo modifications to match your specific needs and unique business processes in the Saudi market with guaranteed quality and performance.
        </p>
      </div>

      <!-- CTA Section -->
      <div class="bg-gradient-to-r from-odoo-purple to-purple-800 rounded-2xl p-8 text-white text-center">
        <h2 class="text-3xl font-bold mb-4">
          Get Custom Odoo Solutions for Your Company
        </h2>
        <p class="text-xl mb-6 text-purple-100">
          Talk to our experts to develop custom solutions that meet your unique needs
        </p>
        <a 
          href="/en/contact"
          class="inline-flex items-center bg-white text-odoo-purple px-8 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-all duration-200 shadow-lg"
        >
          Start Customization Project
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </main>

  <Footer lang="en" />
</Layout>