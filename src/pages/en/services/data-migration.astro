---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Data Migration to Odoo ERP in Saudi Arabia",
  "description": "Safe and accurate migration of all your data from legacy systems to Odoo with guaranteed data integrity and accuracy",
  "provider": {
    "@type": "Organization",
    "name": "ToDoOps",
    "url": "https://your-domain.com"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Saudi Arabia"
  }
};
---

<Layout 
  title="Data Migration to Odoo - ToDoOps | Safe Data Migration Services in Saudi Arabia"
  lang="en" 
  description="Safe and accurate migration of all your data from legacy systems to Odoo. Data analysis, data cleaning, secure migration, and verification & testing."
>
  <Fragment slot="head">
    <meta name="keywords" content="data migration, Odoo data migration, data conversion, secure migration, Odoo Saudi Arabia, data cleaning" />
    <meta property="og:title" content="Data Migration to Odoo - ToDoOps" />
    <meta property="og:description" content="Safe and accurate migration of all your data from legacy systems to Odoo with guaranteed data integrity and accuracy" />
    <link rel="canonical" href="https://your-domain.com/en/services/data-migration" />
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  </Fragment>

  <Header lang="en" />
  
  <main class="py-20 bg-white min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <h1 class="text-4xl lg:text-5xl font-bold text-dark-900 mb-6">
          Data Migration to Odoo ERP
        </h1>
        <p class="text-xl text-odoo-purple font-medium mb-6">
          Safe and accurate migration of all your data to Odoo
        </p>
        <p class="text-lg text-dark-600 max-w-4xl mx-auto leading-relaxed">
          We provide safe and accurate migration services for all your data from legacy systems to Odoo with guaranteed data integrity and accuracy while preserving your company's complete history.
        </p>
      </div>

      <!-- CTA Section -->
      <div class="bg-gradient-to-r from-odoo-purple to-purple-800 rounded-2xl p-8 text-white text-center">
        <h2 class="text-3xl font-bold mb-4">
          Start Migrating Your Data to Odoo Safely
        </h2>
        <p class="text-xl mb-6 text-purple-100">
          Get a free consultation about migrating your data from current system to Odoo
        </p>
        <a 
          href="/en/contact"
          class="inline-flex items-center bg-white text-odoo-purple px-8 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-all duration-200 shadow-lg"
        >
          Book Migration Consultation
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </main>

  <Footer lang="en" />
</Layout>