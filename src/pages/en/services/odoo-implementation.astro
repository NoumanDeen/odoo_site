---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';

// Generate JSON-LD structured data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Full Odoo ERP Implementation in Saudi Arabia",
  "description": "Comprehensive and customized Odoo ERP implementation services for Saudi businesses from certified Odoo partner",
  "provider": {
    "@type": "Organization",
    "name": "ToDoOps",
    "url": "https://your-domain.com",
    "address": {
      "@type": "PostalAddress",
      "addressCountry": "SA",
      "addressRegion": "Riyadh"
    }
  },
  "areaServed": {
    "@type": "Country",
    "name": "Saudi Arabia"
  },
  "offers": {
    "@type": "Offer",
    "description": "Complete and customized Odoo ERP implementation"
  }
};
---

<Layout 
  title="Full Odoo ERP Implementation - ToDoOps | Certified Odoo Partner in Saudi Arabia"
  lang="en" 
  description="Comprehensive and customized Odoo ERP implementation services for Saudi businesses. Complete integration with seamless migration from legacy systems."
>
  <Fragment slot="head">
    <!-- SEO Meta Tags -->
    <meta name="keywords" content="Odoo ERP implementation, certified Odoo partner, Odoo implementation Saudi Arabia, integrated ERP system, business system implementation" />
    <meta property="og:title" content="Full Odoo ERP Implementation - ToDoOps" />
    <meta property="og:description" content="Comprehensive and customized Odoo ERP implementation services for Saudi businesses from certified Odoo partner" />
    <meta property="og:type" content="service" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href="https://your-domain.com/en/services/odoo-implementation" />
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  </Fragment>

  <Header lang="en" />
  
  <main class="py-20 bg-white min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb -->
      <nav class="mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-sm text-dark-600">
          <li>
            <a href="/en" class="hover:text-odoo-purple transition-colors duration-200">Home</a>
          </li>
          <li>
            <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </li>
          <li>
            <a href="/en/services" class="hover:text-odoo-purple transition-colors duration-200">Services</a>
          </li>
          <li>
            <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </li>
          <li class="text-dark-900 font-medium">Full Odoo ERP Implementation</li>
        </ol>
      </nav>

      <!-- Hero Section -->
      <div class="text-center mb-16">
        <h1 class="text-4xl lg:text-5xl font-bold text-dark-900 mb-6">
          Full Odoo ERP Implementation in Saudi Arabia
        </h1>
        <p class="text-xl text-odoo-purple font-medium mb-6">
          Complete and customized Odoo ERP solutions from certified partner
        </p>
        <p class="text-lg text-dark-600 max-w-4xl mx-auto leading-relaxed">
          We provide comprehensive and customized Odoo ERP implementation services for Saudi businesses with seamless migration from legacy systems and maximum system utilization.
        </p>
      </div>

      <!-- Service Overview -->
      <div class="grid lg:grid-cols-2 gap-12 mb-16">
        <div>
          <h2 class="text-3xl font-bold text-dark-900 mb-6">
            What is Full Odoo ERP Implementation?
          </h2>
          <p class="text-dark-600 mb-6 leading-relaxed">
            Full Odoo ERP implementation is a comprehensive process that includes analyzing your business needs, customizing the system, data migration, training, and ongoing support. As a certified Odoo partner in Saudi Arabia, we ensure successful implementation that meets your unique requirements.
          </p>
          <ul class="space-y-3">
            <li class="flex items-start space-x-3">
              <div class="w-6 h-6 bg-odoo-accent/20 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg class="w-4 h-4 text-odoo-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <span class="text-dark-700">Comprehensive business needs analysis</span>
            </li>
            <li class="flex items-start space-x-3">
              <div class="w-6 h-6 bg-odoo-accent/20 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
