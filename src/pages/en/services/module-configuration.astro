---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Odoo Implementation & Module Configuration in Saudi Arabia",
  "description": "Configuration and setup of various Odoo ERP modules to align with your business processes and maximize system benefits",
  "provider": {
    "@type": "Organization",
    "name": "ToDoOps",
    "url": "https://your-domain.com"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Saudi Arabia"
  }
};
---

<Layout 
  title="Odoo Implementation & Module Configuration - ToDoOps | Odoo ERP Experts in Saudi Arabia"
  lang="en" 
  description="Configuration and setup of various Odoo ERP modules to align with your business processes. Interface customization, workflow setup, and function testing."
>
  <Fragment slot="head">
    <meta name="keywords" content="Odoo configuration, Odoo module setup, Odoo customization, ERP modules, Odoo Saudi Arabia, system configuration" />
    <meta property="og:title" content="Odoo Implementation & Module Configuration - ToDoOps" />
    <meta property="og:description" content="Configuration and setup of various Odoo ERP modules to align with your business processes and maximize system benefits" />
    <link rel="canonical" href="https://your-domain.com/en/services/module-configuration" />
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  </Fragment>

  <Header lang="en" />
  
  <main class="py-20 bg-white min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb -->
      <nav class="mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-sm text-dark-600">
          <li><a href="/en" class="hover:text-odoo-purple transition-colors duration-200">Home</a></li>
          <li><svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg></li>
          <li><a href="/en/services" class="hover:text-odoo-purple transition-colors duration-200">Services</a></li>
          <li><svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg></li>
          <li class="text-dark-900 font-medium">Odoo Implementation & Module Configuration</li>
        </ol>
      </nav>

      <!-- Hero Section -->
      <div class="text-center mb-16">
        <h1 class="text-4xl lg:text-5xl font-bold text-dark-900 mb-6">
          Odoo Implementation & Module Configuration
        </h1>
        <p class="text-xl text-odoo-purple font-medium mb-6">
          Configure and setup Odoo modules to fit your business operations
        </p>
        <p class="text-lg text-dark-600 max-w-4xl mx-auto leading-relaxed">
          We provide configuration and setup services for various Odoo ERP modules to align with your business processes and maximize system benefits with guaranteed ease of use and efficiency.
        </p>
      </div>

      <!-- CTA Section -->
      <div class="bg-gradient-to-r from-odoo-purple to-purple-800 rounded-2xl p-8 text-white text-center">
        <h2 class="text-3xl font-bold mb-4">
          Start Configuring Odoo Modules for Your Company
        </h2>
        <p class="text-xl mb-6 text-purple-100">
          Get a free consultation to determine the right modules for your company
        </p>
        <a 
          href="/en/contact"
          class="inline-flex items-center bg-white text-odoo-purple px-8 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-all duration-200 shadow-lg"
        >
          Book Free Consultation
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </main>

  <Footer lang="en" />
</Layout>