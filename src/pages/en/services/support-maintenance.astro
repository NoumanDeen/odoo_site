---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Odoo Support & Maintenance in Saudi Arabia",
  "description": "Ongoing technical support and regular maintenance to ensure your Odoo system operates at peak efficiency with rapid resolution of any technical issues",
  "provider": {
    "@type": "Organization",
    "name": "ToDoOps",
    "url": "https://your-domain.com"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Saudi Arabia"
  }
};
---

<Layout 
  title="Odoo Support & Maintenance - ToDoOps | Odoo Support Services in Saudi Arabia"
  lang="en" 
  description="Ongoing technical support and regular maintenance to ensure your Odoo system operates at peak efficiency. 24/7 support, regular maintenance, system updates, and quick issue resolution."
>
  <Fragment slot="head">
    <meta name="keywords" content="Odoo support, Odoo maintenance, technical support, ERP maintenance, Odoo Saudi Arabia, ongoing support" />
    <meta property="og:title" content="Odoo Support & Maintenance - ToDoOps" />
    <meta property="og:description" content="Ongoing technical support and regular maintenance to ensure your Odoo system operates at peak efficiency with rapid resolution of any technical issues" />
    <link rel="canonical" href="https://your-domain.com/en/services/support-maintenance" />
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  </Fragment>

  <Header lang="en" />
  
  <main class="py-20 bg-white min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <h1 class="text-4xl lg:text-5xl font-bold text-dark-900 mb-6">
          Odoo Support & Maintenance
        </h1>
        <p class="text-xl text-odoo-purple font-medium mb-6">
          Ongoing technical support to ensure your system operates at peak efficiency
        </p>
        <p class="text-lg text-dark-600 max-w-4xl mx-auto leading-relaxed">
          We provide ongoing technical support and regular maintenance to ensure your Odoo system operates at peak efficiency with rapid resolution of any technical issues while guaranteeing business continuity without interruption.
        </p>
      </div>

      <!-- CTA Section -->
      <div class="bg-gradient-to-r from-odoo-purple to-purple-800 rounded-2xl p-8 text-white text-center">
        <h2 class="text-3xl font-bold mb-4">
          Get Ongoing Support for Odoo
        </h2>
        <p class="text-xl mb-6 text-purple-100">
          Contact us to get a customized support and maintenance plan for your Odoo system
        </p>
        <a 
          href="/en/contact"
          class="inline-flex items-center bg-white text-odoo-purple px-8 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-all duration-200 shadow-lg"
        >
          Request Support Plan
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </main>

  <Footer lang="en" />
</Layout>