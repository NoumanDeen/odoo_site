---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { industries } from '../../../data/industries';

const getIcon = (iconType: string) => {
  const icons = {
    construction: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>',
    manufacturing: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>',
    retail: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l-1 7a2 2 0 01-2 2H8a2 2 0 01-2-2L5 9z"></path>',
    services: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>',
    technology: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>',
    healthcare: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>',
    education: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>',
    logistics: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z"></path>',
    hospitality: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>',
    agriculture: '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>'
  };
  return icons[iconType] || icons.services;
};

// Generate JSON-LD structured data
const structuredData = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "Industries We Serve with Odoo ERP Solutions",
  "description": "Customized Odoo ERP solutions for different industries in Saudi Arabia",
  "itemListElement": industries.map((industry, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "item": {
      "@type": "Service",
      "name": industry.en.name,
      "description": industry.en.shortDescription,
      "url": `https://your-domain.com/en/industries/${industry.slug}`
    }
  }))
};
---

<Layout 
  title="Industries We Serve - ToDoOps | Customized Odoo ERP Solutions for Different Industries"
  lang="en" 
  description="Customized Odoo ERP solutions for different industries in Saudi Arabia. We provide specialized solutions for construction, manufacturing, retail, hospitality, and education sectors."
>
  <Fragment slot="head">
    <!-- SEO Meta Tags -->
    <meta name="keywords" content="Odoo for industries, specialized ERP, sector solutions, Odoo Saudi Arabia, construction solutions, manufacturing solutions, retail solutions, service solutions" />
    <meta property="og:title" content="Industries We Serve - ToDoOps" />
    <meta property="og:description" content="Customized Odoo ERP solutions for different industries in Saudi Arabia" />
    <meta property="og:type" content="website" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href="https://your-domain.com/en/industries" />
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  </Fragment>

  <Header lang="en" />
  
  <main class="py-20 bg-white min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb -->
      <nav class="mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 text-sm text-dark-600">
          <li>
            <a href="/en" class="hover:text-odoo-purple transition-colors duration-200">Home</a>
          </li>
          <li>
            <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </li>
          <li class="text-dark-900 font-medium">Industries</li>
        </ol>
      </nav>

      <!-- Header Section -->
      <div class="text-center mb-16">
        <h1 class="text-4xl lg:text-5xl font-bold text-dark-900 mb-6">
          Industries We Serve
        </h1>
        <p class="text-xl text-odoo-purple font-medium mb-6">
          Customized Odoo ERP Solutions for Different Industries
        </p>
        <p class="text-lg text-dark-600 max-w-4xl mx-auto leading-relaxed">
          We provide customized Odoo ERP solutions for different industries in Saudi Arabia with deep understanding of each sector's needs. 
          Our team of specialized experts ensures successful implementation that meets the unique requirements of each industry.
        </p>
      </div>

      <!-- Industries Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        {industries.map((industry, index) => (
          <div class="bg-white rounded-xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 border border-gray-100 group">
            <div class={`w-16 h-16 rounded-xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-200 ${
              index % 4 === 0 ? 'bg-orange-100' :
              index % 4 === 1 ? 'bg-blue-100' :
              index % 4 === 2 ? 'bg-green-100' : 'bg-purple-100'
            }`}>
              <svg class={`w-8 h-8 ${
                index % 4 === 0 ? 'text-orange-600' :
                index % 4 === 1 ? 'text-blue-600' :
                index % 4 === 2 ? 'text-green-600' : 'text-purple-600'
              }`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <Fragment set:html={getIcon(industry.icon)} />
              </svg>
            </div>
            
            <h3 class="text-2xl font-bold text-dark-900 mb-4">
              <a href={`/en/industries/${industry.slug}`} class="hover:text-odoo-purple transition-colors duration-200">
                {industry.en.name}
              </a>
            </h3>
            
            <p class="text-dark-600 mb-6 leading-relaxed">
              {industry.en.shortDescription}
            </p>
            
            <ul class="space-y-3 mb-6">
              {industry.en.features.map((feature) => (
                <li class="flex items-start space-x-3">
                  <div class="w-5 h-5 bg-odoo-accent/20 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5">
                    <svg class="w-3 h-3 text-odoo-purple" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                  <span class="text-dark-700 font-medium">{feature}</span>
                </li>
              ))}
            </ul>

            <a 
              href={`/en/industries/${industry.slug}`}
              class="inline-flex items-center text-odoo-purple hover:text-purple-800 font-medium transition-colors duration-200"
            >
              Discover More
              <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </a>
          </div>
        ))}
      </div>

      <!-- CTA Section -->
      <div class="bg-gradient-to-r from-odoo-purple to-purple-800 rounded-2xl p-8 text-white text-center">
        <h2 class="text-3xl font-bold mb-4">
          Don't See Your Industry?
        </h2>
        <p class="text-xl mb-6 text-purple-100">
          We work with all types of businesses. Talk to us about your specific Odoo ERP needs.
        </p>
        <a 
          href="/en/contact"
          class="inline-flex items-center bg-white text-odoo-purple px-8 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-all duration-200 shadow-lg"
        >
          Contact Us
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </main>

  <Footer lang="en" />
</Layout>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>