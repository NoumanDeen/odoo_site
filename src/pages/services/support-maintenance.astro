---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "دعم وصيانة اودو في السعودية",
  "description": "دعم تقني مستمر وصيانة دورية لضمان عمل نظام اودو بكفاءة عالية وحل اي مشاكل بسرعة",
  "provider": {
    "@type": "Organization",
    "name": "ToDoOps",
    "url": "https://todoops.com"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Saudi Arabia"
  }
};
---

<Layout 
  title="دعم وصيانة اودو - ToDoOps | خدمات دعم اودو في السعودية"
  lang="ar" 
  description="دعم تقني مستمر وصيانة دورية لضمان عمل نظام اودو بكفاءة عالية. دعم 24/7، صيانة دورية، تحديثات النظام، وحل المشاكل السريع."
>
  <Fragment slot="head">
    <meta name="keywords" content="دعم اودو, صيانة اودو, دعم تقني, صيانة ERP, اودو السعودية, دعم مستمر" />
    <meta property="og:title" content="دعم وصيانة اودو - ToDoOps" />
    <meta property="og:description" content="دعم تقني مستمر وصيانة دورية لضمان عمل نظام اودو بكفاءة عالية وحل اي مشاكل بسرعة" />
    <link rel="canonical" href="https://todoops.com/services/support-maintenance" />
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  </Fragment>

  <Header lang="ar" />
  
  <main class="py-20 bg-white min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <h1 class="text-4xl lg:text-5xl font-bold text-dark-900 mb-6">
          دعم وصيانة اودو
        </h1>
        <p class="text-xl text-odoo-purple font-medium mb-6">
          دعم تقني مستمر لضمان عمل نظامك بافضل كفاءة
        </p>
        <p class="text-lg text-dark-600 max-w-4xl mx-auto leading-relaxed">
          نقدم دعم تقني مستمر وصيانة دورية لضمان عمل نظام اودو بكفاءة عالية وحل اي مشاكل بسرعة مع ضمان استمرارية عملك دون انقطاع.
        </p>
      </div>

      <!-- CTA Section -->
      <div class="bg-gradient-to-r from-odoo-purple to-purple-800 rounded-2xl p-8 text-white text-center">
        <h2 class="text-3xl font-bold mb-4">
          احصل على دعم مستمر لاودو
        </h2>
        <p class="text-xl mb-6 text-purple-100">
          تواصل معنا للحصول على خطة دعم وصيانة مخصصة لنظام اودو
        </p>
        <a 
          href="/contact"
          class="inline-flex items-center bg-white text-odoo-purple px-8 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-all duration-200 shadow-lg"
        >
          اطلب خطة الدعم
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </main>

  <Footer lang="ar" />
</Layout>