---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "استضافة اودو والبنية التحتية في السعودية",
  "description": "حلول استضافة موثوقة وامنة لنظام اودو مع ضمان الاداء العالي والحماية المتقدمة",
  "provider": {
    "@type": "Organization",
    "name": "ToDoOps",
    "url": "https://todoops.com"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Saudi Arabia"
  }
};
---

<Layout 
  title="استضافة اودو والبنية التحتية - ToDoOps | خدمات استضافة اودو في السعودية"
  lang="ar" 
  description="حلول استضافة موثوقة وامنة لنظام اودو مع ضمان الاداء العالي والحماية المتقدمة. استضافة سحابية، النسخ الاحتياطي، والامان المتقدم."
>
  <Fragment slot="head">
    <meta name="keywords" content="استضافة اودو, استضافة سحابية, خوادم اودو, بنية تحتية, اودو السعودية, استضافة امنة" />
    <meta property="og:title" content="استضافة اودو والبنية التحتية - ToDoOps" />
    <meta property="og:description" content="حلول استضافة موثوقة وامنة لنظام اودو مع ضمان الاداء العالي والحماية المتقدمة" />
    <link rel="canonical" href="https://todoops.com/services/hosting-infrastructure" />
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  </Fragment>

  <Header lang="ar" />
  
  <main class="py-20 bg-white min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <h1 class="text-4xl lg:text-5xl font-bold text-dark-900 mb-6">
          استضافة اودو والبنية التحتية
        </h1>
        <p class="text-xl text-odoo-purple font-medium mb-6">
          حلول استضافة موثوقة وامنة لنظام اودو
        </p>
        <p class="text-lg text-dark-600 max-w-4xl mx-auto leading-relaxed">
          نقدم حلول استضافة موثوقة وامنة لنظام اودو مع ضمان الاداء العالي والحماية المتقدمة والنسخ الاحتياطي التلقائي لضمان استمرارية عملك.
        </p>
      </div>

      <!-- CTA Section -->
      <div class="bg-gradient-to-r from-odoo-purple to-purple-800 rounded-2xl p-8 text-white text-center">
        <h2 class="text-3xl font-bold mb-4">
          احصل على استضافة موثوقة لاودو
        </h2>
        <p class="text-xl mb-6 text-purple-100">
          تحدث معنا حول احتياجات الاستضافة والبنية التحتية لنظام اودو
        </p>
        <a 
          href="/contact"
          class="inline-flex items-center bg-white text-odoo-purple px-8 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-all duration-200 shadow-lg"
        >
          استشر خبراء الاستضافة
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </main>

  <Footer lang="ar" />
</Layout>