---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "استشارات وتحسين اودو في السعودية",
  "description": "استشارات متخصصة لتحسين اداء نظام اودو وتطوير العمليات لتحقيق افضل النتائج",
  "provider": {
    "@type": "Organization",
    "name": "ToDoOps",
    "url": "https://todoops.com"
  },
  "areaServed": {
    "@type": "Country",
    "name": "Saudi Arabia"
  }
};
---

<Layout 
  title="استشارات وتحسين اودو - ToDoOps | خدمات استشارات اودو في السعودية"
  lang="ar" 
  description="استشارات متخصصة لتحسين اداء نظام اودو وتطوير العمليات لتحقيق افضل النتائج. تحليل الاداء، تحسين العمليات، واستشارات استراتيجية."
>
  <Fragment slot="head">
    <meta name="keywords" content="استشارات اودو, تحسين اودو, استشارات ERP, تحسين الاداء, اودو السعودية, استشارات تقنية" />
    <meta property="og:title" content="استشارات وتحسين اودو - ToDoOps" />
    <meta property="og:description" content="استشارات متخصصة لتحسين اداء نظام اودو وتطوير العمليات لتحقيق افضل النتائج" />
    <link rel="canonical" href="https://todoops.com/services/consultancy-optimization" />
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  </Fragment>

  <Header lang="ar" />
  
  <main class="py-20 bg-white min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <h1 class="text-4xl lg:text-5xl font-bold text-dark-900 mb-6">
          استشارات وتحسين اودو
        </h1>
        <p class="text-xl text-odoo-purple font-medium mb-6">
          استشارات متخصصة لتحقيق اقصى استفادة من اودو
        </p>
        <p class="text-lg text-dark-600 max-w-4xl mx-auto leading-relaxed">
          نقدم استشارات متخصصة لتحسين اداء نظام اودو وتطوير العمليات لتحقيق افضل النتائج مع تحليل شامل للاداء واستراتيجيات التحسين المستمر.
        </p>
      </div>

      <!-- CTA Section -->
      <div class="bg-gradient-to-r from-odoo-purple to-purple-800 rounded-2xl p-8 text-white text-center">
        <h2 class="text-3xl font-bold mb-4">
          احصل على استشارة متخصصة لاودو
        </h2>
        <p class="text-xl mb-6 text-purple-100">
          تحدث مع خبرائنا لتحسين اداء نظام اودو وتطوير عملياتك
        </p>
        <a 
          href="/contact"
          class="inline-flex items-center bg-white text-odoo-purple px-8 py-3 rounded-lg font-semibold hover:bg-gray-50 transition-all duration-200 shadow-lg"
        >
          احجز استشارة متخصصة
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    </div>
  </main>

  <Footer lang="ar" />
</Layout>