---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';

// SEO metadata
const title = "تواصل معنا - ToDoOps | شريك اودو المعتمد في السعودية";
const description = "تواصل مع فريق ToDoOps، شريك اودو المعتمد في السعودية. احصل على استشارة مجانية حول تنفيذ اودو ERP لشركتك.";

// Structured data for SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": "تواصل معنا - ToDoOps",
  "description": "صفحة التواصل مع ToDoOps، شريك اودو المعتمد في السعودية",
  "url": "https://todoops.com/contact",
  "mainEntity": {
    "@type": "Organization",
    "name": "ToDoOps",
    "telephone": "+966540676575",
    "email": "contact@todoops.com",
    "address": {
      "@type": "PostalAddress",
      "addressCountry": "SA",
      "addressRegion": "المنطقة الشرقية، الرياض، جدة"
    },
    "contactPoint": {
      "@type": "ContactPoint",
      "telephone": "+966540676575",
      "contactType": "customer service",
      "availableLanguage": ["Arabic", "English"]
    }
  }
};
---

<Layout title={title} lang="ar" description={description}>
  <Fragment slot="head">
    <!-- SEO Meta Tags -->
    <meta name="keywords" content="تواصل معنا, شريك اودو, تنفيذ اودو, دعم اودو, استشارة ERP, اودو السعودية" />
    <meta property="og:title" content="تواصل معنا - ToDoOps" />
    <meta property="og:description" content="تواصل مع فريق ToDoOps، شريك اودو المعتمد في السعودية. احصل على استشارة مجانية حول تنفيذ اودو ERP لشركتك." />
    <meta property="og:type" content="website" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href="https://todoops.com/contact" />
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  </Fragment>

  <Header lang="ar" />
  
  <main class="py-20 bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb -->
      <nav class="mb-8" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-2 rtl:space-x-reverse text-sm text-dark-600">
          <li>
            <a href="/" class="hover:text-odoo-purple transition-colors duration-200">الرئيسية</a>
          </li>
          <li>
            <svg class="w-4 h-4 mx-2 rtl:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </li>
          <li class="text-dark-900 font-medium">تواصل معنا</li>
        </ol>
      </nav>

      <!-- Reuse the Contact component -->
      <Contact lang="ar" />
    </div>
  </main>

  <Footer lang="ar" />
</Layout>